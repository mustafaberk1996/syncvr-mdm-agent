<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginTop="40dp"
        android:text="@string/permission_title_neg"
        android:textSize="24sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="@font/plusjakartasans_semibold"
        android:lineHeight="28sp"
        android:letterSpacing="0.01"
        android:textColor="#FF000000" />


    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginTop="24dp"
        android:textAlignment="center"
        android:text="@string/permission_description_neg"
        android:textSize="18sp"
        android:fontFamily="@font/inter_regular"
        android:lineHeight="23sp"
        android:textColor="#808080" />


    <Button
        android:id="@+id/btnSettings"
        android:layout_width="320dp"
        android:layout_height="56dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="48dp"
        android:text="@string/permission_button_settings"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:enabled="true"
        android:textStyle="bold"
        android:backgroundTint="@color/button_background_selector"
        android:shape="oval" />

</LinearLayout>
